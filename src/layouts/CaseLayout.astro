---
import BaseHead from '../components/base/BaseHead.astro'
import CaseFixedItems from '../components/case/CaseFixedItems.astro'
import Footer from '../components/Footer.astro'
const { caseTitle } = Astro.props
---

<html lang='ru'>
  <head>
    <BaseHead />
    <title>{caseTitle} | Ира Васюк, дизайнер</title>
  </head>
  <body>
    <CaseFixedItems />
    <div class='padding-container'>
      <main class='content-wrapper'>
        <slot />
        <Footer />
      </main>
    </div>
  </body>
</html>

<style>
  .padding-container {
    padding: 0 250px;
  }
  .content-wrapper {
    display: flex;
    flex-direction: column;
    max-width: 754px;
    margin: auto;
    align-items: left;
    gap: 5rem;
  }
  @media (width < 1024px) {
    .padding-container {
      padding: 0 10px;
    }
    .content-wrapper {
      max-width: unset;
    }
  }
</style>
