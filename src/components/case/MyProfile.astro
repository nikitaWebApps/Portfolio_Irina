---
import ProfilePicture from '../ProfilePicture.astro'
---

<a href='/'>
  <div class='my-profile'>
    <div class='picture'>
      <ProfilePicture />
    </div>
    <p class='text'>
      <span class='highlight'>Ира Васюк<br /></span>
      продуктовый дизайнер
    </p>
  </div>
</a>

<style>
  .my-profile {
    display: flex;
    position: absolute;
    top: 10px;
    left: 10px;
    width: max-content;
    gap: 0.6rem;
  }
  .picture {
    width: 40px;
  }
  .text {
    font-size: 1.25rem;
    color: var(--grey-light);
    line-height: 110%;
  }
  .highlight {
    color: var(--white);
  }
</style>
