<style>
  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
  }

  .tag {
    display: flex;
    color: var(--grey-light);
    background-color: #2e2e2e;
    padding: 0.5rem;
  }
</style>
